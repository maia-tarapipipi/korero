{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["server/**/*", "client/**/*"]
}
